# Production Environment Configuration - EXAMPLE
# Copy this to .env.production and configure with your actual values
# DO NOT commit .env.production to git - it should contain sensitive data

# Database
DB_NAME=ama-impact.db

# Initial Admin User (created on first database initialization)
INITIAL_ADMIN_EMAIL=gerrit-daniel.stich@ama-inc.com
INITIAL_ADMIN_PASSWORD=ChangeMe2024!
INITIAL_ADMIN_NAME=Gerrit Stich

# Security - GENERATE NEW KEYS FOR PRODUCTION!
# Use: openssl rand -hex 32
SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration - Configure with your SMTP provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@ama-inc.com
SMTP_PASSWORD=your-app-password-here
EMAIL_FROM=noreply@ama-impact.com

# CORS - Set to your production frontend URL
FRONTEND_URL=https://your-production-domain.com

# Application
APP_NAME=AMA IMPACT
APP_VERSION=1.0.0
DEBUG=False

# Scheduler
NOTIFICATION_CHECK_HOUR=8
NOTIFICATION_CHECK_MINUTE=0

# Production-specific
ENABLE_SQL_LOGGING=False
AUTO_RELOAD=False
